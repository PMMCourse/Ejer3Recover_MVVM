<Window x:Class="Ejer5MVVM.View.Buscador"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ejer5MVVM.View"
        mc:Ignorable="d"
        Title="Buscador" Height="450" Width="800">
    <Grid>
        <StackPanel Orientation="Vertical">
            <TextBox Height="28" Width="300" Margin="20" Text ="{Binding BuscarPalabras, UpdateSourceTrigger=PropertyChanged}"/>
            <Label FontSize="24" Height="100" Content="{Binding EncontrarPalabras}"/>
        </StackPanel>
    </Grid>
</Window>
