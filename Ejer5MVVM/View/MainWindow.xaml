<Window x:Class="Ejer5MVVM.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ejer5MVVM"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Orientation="Vertical">
            <Label Margin="10" FontSize="24" Height="50" Width="310">Introducir Persona a la lista</Label>
            <TextBox Margin="10" Height="50" Width="300"/>
            <Button Content="AGREGAR" Margin="20" Height="40" Width="120"/>
            <Button Content="BUSCADOR" Height="50" Width="300"  Command="{Binding Navegar}"/>
        </StackPanel>
    </Grid>
</Window>
